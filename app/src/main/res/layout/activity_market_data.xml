<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="backListener"
            type="com.hasry.interfaces.Listeners.BackListener" />

        <variable
            name="lang"
            type="String" />

        <variable
            name="model"
            type="com.hasry.models.MarketDataModel.Data.Market" />

        <import type="android.view.View"/>

    </data>

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true"
       android:fitsSystemWindows="true">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <com.google.android.material.appbar.AppBarLayout
               android:layout_width="match_parent"
               android:layout_height="250dp"
               android:background="@drawable/top_market"
               >

               <androidx.appcompat.widget.Toolbar
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/transparent"
                   app:contentInsetEnd="0dp"
                   app:contentInsetLeft="0dp"
                   app:contentInsetRight="0dp"
                   app:contentInsetStart="0dp"
                   >

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="8dp"
                       android:layout_marginEnd="8dp"
                       android:gravity="center_vertical"
                       android:onClick="@{()->backListener.back()}"
                       android:orientation="horizontal"

                       >

                       <ImageView
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:clickable="false"
                           android:longClickable="false"
                           android:padding="8dp"
                           android:rotation='@{lang.equals("ar")?180:0}'
                           android:src="@drawable/ic_left_arrow"
                           android:tint="@color/white"

                           />

                       <TextView

                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_vertical"
                           android:layout_marginStart="5dp"
                           android:layout_marginEnd="5dp"
                           android:clickable="false"
                           android:longClickable="false"
                           android:text="@{model.name}"
                           android:textColor="@color/white"
                           android:textSize="15sp" />

                   </LinearLayout>

                   <FrameLayout
                       android:id="@+id/flSearch"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="center_vertical|end"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       >

                       <de.hdodenhof.circleimageview.CircleImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           app:civ_border_width="0dp"
                           app:civ_circle_background_color="@color/circle_bg"
                           android:src="@color/circle_bg"
                           />
                       <ImageView
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:layout_gravity="center"
                           android:clickable="false"
                           android:longClickable="false"
                           android:padding="8dp"
                           android:src="@drawable/ic_search"
                           android:tint="@color/white"
                           />



                   </FrameLayout>

               </androidx.appcompat.widget.Toolbar>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/image"
                       android:layout_width="90dp"
                       android:layout_height="90dp"
                       android:layout_marginTop="10dp"
                       android:src="@drawable/user_avatar"
                       app:civ_border_color="@color/white"
                       app:civ_border_width="2dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <TextView
                       android:id="@+id/tvTitle"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="10dp"
                       android:layout_marginEnd="20dp"
                       android:textColor="@color/white"
                       android:textSize="16sp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/image" />

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/consStatus"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="20dp"
                       android:layout_marginEnd="20dp"
                       android:layout_marginBottom="20dp"
                       android:background="@drawable/rounded_white"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/tvTitle">

                       <View
                           android:id="@+id/v1"
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           android:background="@drawable/circle_yellow"
                           android:visibility='@{model.markter_status.equals("close")?View.INVISIBLE:View.VISIBLE,default = invisible}'
                           />

                       <Space
                           android:id="@+id/sp"
                           android:layout_width="10dp"
                           android:layout_height="1dp"
                           app:layout_constraintBottom_toBottomOf="@id/v1"
                           app:layout_constraintStart_toEndOf="@id/v1"
                           app:layout_constraintTop_toTopOf="@id/v1" />

                       <View
                           android:id="@+id/v2"
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toEndOf="@id/sp"
                           app:layout_constraintTop_toTopOf="parent"
                           android:background="@drawable/circle_gray"
                           android:visibility='@{model.markter_status.equals("open")?View.INVISIBLE:View.VISIBLE,default = invisible}'
                           />

                   </androidx.constraintlayout.widget.ConstraintLayout>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="15sp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toEndOf="@id/consStatus"
                       android:layout_marginBottom="20dp"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:text='@{model.is_login==null?@string/close:(model.is_login.equals("0")?@string/close:@string/open)}'
                       />
               </androidx.constraintlayout.widget.ConstraintLayout>


           </com.google.android.material.appbar.AppBarLayout>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardElevation="3dp"
               app:contentPadding="10dp"
               app:cardCornerRadius="20dp"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginTop="20dp"
               app:cardBackgroundColor="@color/white"
               android:layout_marginBottom="10dp"
               >
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <LinearLayout
                       android:id="@+id/llLocation"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       >
                       <ImageView
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:src="@drawable/ic_map"
                           android:tint="@color/colorPrimary"
                           android:clickable="false"
                           android:longClickable="false"
                           android:padding="5dp"
                           />
                       <TextView
                           android:id="@+id/tv1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="30dp"
                           android:layout_marginEnd="30dp"
                           android:textSize="14sp"
                           android:textColor="@color/colorPrimary"
                           android:text="@string/location"
                           android:clickable="false"
                           android:longClickable="false"
                           />
                   </LinearLayout>


                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_left_arrow"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toEndOf="@id/llLocation"
                       app:layout_constraintEnd_toStartOf="@id/llCity"
                       android:padding="3dp"
                       android:tint="@color/gray3"
                       />

                   <LinearLayout
                       android:id="@+id/llCity"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:orientation="vertical"
                       android:gravity="center"
                       >
                       <ImageView
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:src="@drawable/ic_earth"
                           android:tint="@color/colorPrimary"
                           android:clickable="false"
                           android:longClickable="false"
                           android:padding="5dp"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="30dp"
                           android:layout_marginEnd="30dp"
                           android:textSize="14sp"
                           android:textColor="@color/colorPrimary"
                           android:text="@{model.city}"
                           android:clickable="false"
                           android:longClickable="false"
                           />
                   </LinearLayout>





               </androidx.constraintlayout.widget.ConstraintLayout>
           </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               >

               <FrameLayout
                   android:id="@+id/flOffer"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:layout_marginTop="10dp"
                   android:minHeight="200dp"

                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/black"
                           android:text="@string/offers"
                           android:textSize="13sp"
                           />
                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/recViewOffer"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           />

                   </LinearLayout>

                   <ProgressBar
                       android:id="@+id/progBarOffer"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:layout_gravity="center"
                       />

               </FrameLayout>

               <FrameLayout
                   android:id="@+id/flMostSeller"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:layout_marginTop="10dp"
                   android:minHeight="200dp"


                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/black"
                           android:text="@string/most_seller"
                           android:textSize="13sp"
                           />
                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/recViewMostSeller"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           />

                   </LinearLayout>

                   <ProgressBar
                       android:id="@+id/progBarMostSeller"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:layout_gravity="center"
                       />
               </FrameLayout>

               <FrameLayout
                   android:id="@+id/flMostUsed"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="15dp"
                   android:paddingRight="15dp"
                   android:layout_marginTop="10dp"
                   android:minHeight="200dp"


                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginBottom="10dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/black"
                           android:text="@string/most_used"
                           android:textSize="13sp"
                           />
                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/recViewMostUsed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           />

                   </LinearLayout>

                   <ProgressBar
                       android:id="@+id/progBarMostUsed"
                       android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:layout_gravity="center"
                       />
               </FrameLayout>






           </LinearLayout>

       </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</layout>
