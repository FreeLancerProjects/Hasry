<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="tags"
            type="com.hasry.tags.Tags" />
        <variable
            name="random"
            type="java.util.Random" />
        <variable
            name="lang"
            type="String" />
        <variable
            name="model"
            type="com.hasry.models.UserModel.User" />

        <variable
            name="backListener"
            type="com.hasry.interfaces.Listeners.BackListener" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <FrameLayout
                        android:id="@+id/fl"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background='@{lang.equals("ar")?@drawable/profile_top_right:@drawable/profile_top_left,default=@drawable/profile_top_left}'
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                    </FrameLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"
                        android:src="@drawable/user_avatar"
                        app:civ_circle_background_color="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/fl"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        image="@{model.logo}"

                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <FrameLayout
                        android:id="@+id/flName"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"

                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_user"
                            android:layout_gravity="center"
                            android:tint="@color/white"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/llName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/flName"
                        app:layout_constraintTop_toTopOf="@id/flName"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintEnd_toEndOf="parent"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/gray6"
                            android:text="@string/name"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@{model.name}"
                            />

                    </LinearLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        app:layout_constraintStart_toStartOf="@id/flName"
                        app:layout_constraintTop_toBottomOf="@id/llName"
                        app:layout_constraintEnd_toEndOf="@id/llName"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray4"
                        />



                    <FrameLayout
                        android:id="@+id/flPhone"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view1"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_call"
                            android:layout_gravity="center"
                            android:tint="@color/white"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/llPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/flPhone"
                        app:layout_constraintTop_toTopOf="@id/flPhone"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintEnd_toEndOf="parent"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/gray6"
                            android:text="@string/phone"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text='@{model.phone_code+" "+model.phone}'

                            />



                    </LinearLayout>



                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        app:layout_constraintStart_toStartOf="@id/flPhone"
                        app:layout_constraintTop_toBottomOf="@id/llPhone"
                        app:layout_constraintEnd_toEndOf="@id/llPhone"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray4"
                        />



                    <FrameLayout
                        android:id="@+id/flEmail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view3"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            android:layout_gravity="center"
                            android:tint="@color/white"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/llEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/flEmail"
                        app:layout_constraintTop_toTopOf="@id/flEmail"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintEnd_toEndOf="parent"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/gray6"
                            android:text="@string/email"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@{model.email}"

                            />



                    </LinearLayout>



                    <View
                        android:id="@+id/view4"
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        app:layout_constraintStart_toStartOf="@id/flEmail"
                        app:layout_constraintTop_toBottomOf="@id/llEmail"
                        app:layout_constraintEnd_toEndOf="@id/llEmail"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray4"
                        />

                    <FrameLayout
                        android:id="@+id/flCity"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view4"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_earth"
                            android:layout_gravity="center"
                            android:tint="@color/white"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/llCity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/flCity"
                        app:layout_constraintTop_toTopOf="@id/flCity"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintEnd_toEndOf="parent"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/gray6"
                            android:text="@string/city"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@{model.city}"

                            />



                    </LinearLayout>



                    <View
                        android:id="@+id/view5"
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        app:layout_constraintStart_toStartOf="@id/flCity"
                        app:layout_constraintTop_toBottomOf="@id/llCity"
                        app:layout_constraintEnd_toEndOf="@id/llCity"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray4"
                        />

                    <FrameLayout
                        android:id="@+id/flLink"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view5"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        >
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@color/colorPrimaryDark"
                            android:layout_gravity="center"
                            />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_teamwork"
                            android:layout_gravity="center"
                            android:tint="@color/white"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/llLink"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toEndOf="@id/flLink"
                        app:layout_constraintTop_toTopOf="@id/flLink"
                        app:layout_constraintBottom_toBottomOf="@id/flLink"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintEnd_toEndOf="parent"

                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"

                            />



                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:lines="2"
                    android:text='@{tags.base_url+"ref?code="+String.format("%04d", random.nextInt(10000))+model.id+String.format("%04d", random.nextInt(10000))}'
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/copy"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textSize="13sp"
                    android:background="@drawable/btn_skip"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>
